class SPI {
    /**
     * Reads a character from the UART.
     * Returns the character read.
     */
    function int readChar() {
        var int c;
        let c = Mem.peek(2052);
        return c;
    }

    /** 
     * Sends the character `c` to the UART.
     */
    function void writeChar(int c) {
        do Mem.poke(2052, c);
        return;
    }
}
