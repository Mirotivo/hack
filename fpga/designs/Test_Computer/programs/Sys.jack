class Sys {
    function void init() {
        var int c;

        do UART.sendChar( 'H' );
        do UART.sendChar( 'i' );
        do UART.sendChar( ' ' );
        do UART.sendChar( 'A' );
        do UART.sendChar( 'm' );
        do UART.sendChar( 'r' );

        // Infinite loop to read and echo characters
        while (true) {
            let c = UART.receiveChar();
            if (~(c = 0)) {
                do UART.sendChar(c);
            }
        }

        return;
    }
}
